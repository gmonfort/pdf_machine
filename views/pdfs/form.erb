<div class="col-md-6">
  <form class="form-horizontal" role="form" method="post" action="/pdfs" enctype="multipart/form-data">
    <div class="box box-primary">
      <div class="box-body">
        <div class="form-group">
          <label for="svg">SVG file</label>
          <input type="file" name="svg" id="svg" required="">
        </div>

        <div class="form-group">
          <label for="svg">Use Batik?</label>
          <input type="radio" name="batik" value="1">Use Batik<br>
          <input type="radio" name="batik" value="0" checked>Don't use Batik
        </div>

        <div class="form-group">
          <label for="">Rotate?</label>
          <input type="radio" name="rotate_pdf" value="1">Rotate 90 degrees clockwise<br>
          <input type="radio" name="rotate_pdf" value="0" checked>Don't rotate
        </div>
      <div class="box-footer">
        <button type="submit" class="btn btn-primary">Convert to PDF</button>
      </div>
    </div>
  </form>
</div>
